<div class="modal fade c-modal" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Log In</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

      </div>
      <div class="modal-body custom">

        <div class="alert alert-danger alert-dismissible fade show text-center w-100" role="alert" style="margin: 0;">
          <strong class="error-message"></strong>
          <button type="button" class="btn-close p-1" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <div class="login-local">
          <form action="/login" method="POST" class="login-form">
            <div class="mb-3">

              <input class="form-control" type="text" id="username" name="username" placeholder="Email" required>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <div class="mb-3">
              <input class="form-control" type="password" id="password" name="password" required placeholder="password">
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <button class="btn btn-success">Log In</button>




          </form>

        </div>
        <div class="login-diff">

          <div class="google">
            <a href="">
              <div class="google-icon">
                <img
                  src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/1024px-Google_%22G%22_Logo.svg.png"
                  alt="">

              </div>
              <span>Sign In With Google</span>
            </a>
          </div>


          <div class="fb-login-button" data-width="" data-size="large" data-button-type="login_with"
            data-layout="default" data-auto-logout-link="false" data-use-continue-as="false"></div>

        </div>
      </div>

    </div>
  </div>
</div>
